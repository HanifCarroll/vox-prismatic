# Notion API Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_TRANSCRIPTS_DATABASE_ID=your_transcripts_database_id_here
NOTION_INSIGHTS_DATABASE_ID=your_insights_database_id_here
NOTION_POSTS_DATABASE_ID=your_content_posts_database_id_here

# Google AI API Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Postiz API Configuration
POSTIZ_API_KEY=your_postiz_api_key_here
POSTIZ_BASE_URL=your_postiz_base_url_here

# Database Configuration
DATABASE_PATH=/app/data/content.db

# LinkedIn Publishing Integration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret  
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_REDIRECT_URI=http://localhost:3000/oauth/linkedin/callback

# X (Twitter) Publishing Integration
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_ACCESS_TOKEN=your_x_access_token
X_REDIRECT_URI=https://your-domain.com/auth/x/callback

# Alternative X/Twitter API Key names (if using API v1.1)
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret

# API Server Configuration  
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3001

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Worker Configuration
WORKER_INTERVAL_SECONDS=60
WORKER_RETRY_ATTEMPTS=3

# Deepgram Integration (if used for transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key
