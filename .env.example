# Content Creation Platform Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# ASP.NET Core Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# DATABASE CONFIGURATION
# Used by: Docker Compose, .NET API
# =============================================================================

# PostgreSQL credentials (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=content_creation

# .NET connection string (must match above values)
ConnectionStrings__DefaultConnection=Host=localhost;Database=content_creation;Username=postgres;Password=postgres

# Hangfire background job storage (optional - defaults to main connection)
# Hangfire__PostgreSql__ConnectionString=Host=localhost;Database=content_creation;Username=postgres;Password=postgres

# =============================================================================
# API SERVICES CONFIGURATION
# Used by: .NET API
# =============================================================================

# JWT Authentication
Jwt__SecretKey=your-256-bit-secret-key-for-development-only-change-in-production
Jwt__Issuer=ContentCreation
Jwt__Audience=ContentCreationAPI
Jwt__ExpiryMinutes=60

# Resend Email Service (required for email features)
Resend__ApiKey=re_your_resend_api_key_here
Resend__FromEmail=noreply@yourdomain.com
Resend__FromName=Content Creation Platform

# Google AI API (required for content processing)
GOOGLE_AI_API_KEY=your_google_ai_api_key
ApiKeys__GoogleAI=your_google_ai_api_key

# Deepgram API (required for transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key
ApiKeys__Deepgram=your_deepgram_api_key

# LinkedIn OAuth (required for LinkedIn publishing)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
ApiKeys__LinkedIn__ClientId=your_linkedin_client_id
ApiKeys__LinkedIn__ClientSecret=your_linkedin_client_secret
ApiKeys__LinkedIn__AccessToken=your_linkedin_access_token

# =============================================================================
# APPLICATION URLS
# Used by: .NET API for email links and CORS
# =============================================================================

# Frontend application URL (used in emails and CORS)
App__Url=http://localhost:4200

# API URLs (optional - defaults are usually fine)
# ASPNETCORE_URLS=http://localhost:5001

# =============================================================================
# PRODUCTION OVERRIDES
# Uncomment and modify for production deployment
# =============================================================================

# ASPNETCORE_ENVIRONMENT=Production
# App__Url=https://yourdomain.com
# Resend__FromEmail=noreply@youractualdomain.com
# ConnectionStrings__DefaultConnection=Host=your-prod-db;Database=content_creation;Username=produser;Password=strongpassword