# Server
PORT=3000
NODE_ENV=development

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/linkedin/callback
# Where the API should redirect after a successful/failed LinkedIn connect (FE route)
LINKEDIN_FE_REDIRECT_URL=http://localhost:5173/integrations/linkedin/callback
# Google OAuth via Supabase (configure in Supabase Dashboard)
AUTH_COOKIE_DOMAIN=localhost

# AI Services
GEMINI_API_KEY=your-gemini-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM="Vox Prismatic <no-reply@voxprismatic.com>"

# CORS (your frontend origin)
CORS_ORIGIN=http://localhost:5173

# Feature flags / tuning
DISABLE_RATE_LIMIT=false
POST_SCHEDULER_DISABLED=false
POST_SCHEDULER_INTERVAL_MS=60000
POST_SCHEDULER_BATCH_SIZE=10
