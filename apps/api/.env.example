# Server
PORT=3000
NODE_ENV=development

# Database (use your hosted DB URL in production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/content_creation

# Authentication
JWT_SECRET=generate-a-strong-random-secret-with-high-entropy
JWT_EXPIRES_IN=7d

# OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/linkedin/callback
# Where the API should redirect after a successful/failed LinkedIn connect (FE route)
LINKEDIN_FE_REDIRECT_URL=http://localhost:5173/integrations/linkedin/callback

# AI Services
GEMINI_API_KEY=your-gemini-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# CORS (your frontend origin)
CORS_ORIGIN=http://localhost:5173

# Feature flags / tuning
DISABLE_RATE_LIMIT=false
POST_SCHEDULER_DISABLED=false
POST_SCHEDULER_INTERVAL_MS=60000
POST_SCHEDULER_BATCH_SIZE=10
