# Development Dockerfile for NestJS with hot reload support
FROM node:20-alpine

# Install Bun
RUN apk add --no-cache curl bash && \
    curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./
COPY apps/api/package.json ./apps/api/

# Install dependencies (including dev dependencies)
RUN bun install

# Copy source code (will be overridden by volumes in docker-compose)
COPY apps/api ./apps/api
COPY packages ./packages

# Generate Prisma Client
WORKDIR /app/apps/api
RUN bunx prisma generate

# Expose port
EXPOSE 3000

# Set development environment
ENV NODE_ENV=development
ENV PORT=3000
ENV HOST=0.0.0.0

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3000/api/health', (r) => {if(r.statusCode !== 200) process.exit(1)}, () => process.exit(1))"

# Default command (can be overridden in docker-compose)
CMD ["bun", "run", "start:dev"]