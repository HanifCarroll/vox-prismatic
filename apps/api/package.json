    "@hono/node-server": "^1.19.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.2",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "ai": "^5.0.54",
    "arctic": "^3.7.0",
    "bcrypt": "^6.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "jose": "^6.1.0",
    "lucia": "^3.2.0",
    "marked": "^16.2.1",
    "nanoid": "^5.1.5",
