    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
