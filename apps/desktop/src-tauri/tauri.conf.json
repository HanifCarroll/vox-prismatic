{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Content Recorder",
  "version": "0.1.0",
  "identifier": "com.hanifcarroll.content-recorder",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Content Recorder",
        "width": 320,
        "height": 480,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": true
      },
      {
        "label": "notification",
        "title": "Meeting Notification",
        "url": "/notification",
        "width": 320,
        "height": 150,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": false,
        "closable": true,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "center": false,
        "x": null,
        "y": null,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:event:allow-listen",
            "core:event:default",
            "opener:default"
          ]
        },
        {
          "identifier": "notification-window",
          "description": "Notification window capabilities", 
          "windows": ["notification"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:event:allow-listen",
            "core:event:default",
            "opener:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  }
}
