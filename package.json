{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'API,WEB,DESKTOP' -c 'blue,green,yellow' 'bun run api' 'bun run web' 'bun run desktop'",
    "dev:full": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'API,WEB' -c 'blue,green' 'bun run api' 'bun run web'",
    "build": "bun --filter=\"./packages/**\" build",
    "test": "bun --filter=\"*\" test",
    "type-check": "bun --filter=\"*\" type-check",
    "clean": "rm -rf node_modules packages/*/dist apps/*/dist",
    "web": "cd apps/web && bun dev",
    "api": "cd apps/api && bun dev",
    "desktop": "cd apps/desktop && bun tauri dev",
    "build:web": "cd apps/web && bun run build",
    "build:desktop": "cd apps/desktop && bun tauri build",
    "db:generate": "cd apps/api && npx drizzle-kit generate",
    "db:migrate": "cd apps/api && npx drizzle-kit migrate",
    "db:push": "cd apps/api && npx drizzle-kit push"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "prompts": "^2.4.2"
  }
}
