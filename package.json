{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'DB,API,WEB' -c 'blue,magenta,green' 'docker compose up postgres' 'pnpm dev:api' 'pnpm dev:web-angular'",
    "dev:web-angular": "cd apps/web-angular && pnpm start",
    "dev:desktop": "cd apps/desktop-tauri && pnpm tauri dev",
    "dev:api": "dotnet watch --project apps/api-dotnet/src/ContentCreation.Api",
    "dev:worker": "dotnet watch --project apps/api-dotnet/src/ContentCreation.Worker",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "build:web": "cd apps/web-angular && pnpm build",
    "build:desktop": "cd apps/desktop-tauri && pnpm tauri build",
    "build:api": "dotnet build apps/api-dotnet/ContentCreation.sln -c Release",
    "test:web": "pnpm --filter web-angular test",
    "test:api": "dotnet test apps/api-dotnet/ContentCreation.sln",
    "clean": "rm -rf node_modules apps/*/dist",
    "web": "pnpm dev:web-angular",
    "desktop": "pnpm dev:desktop"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {}
}
