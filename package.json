{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'DOCKER,WEB' -c 'blue,green' 'docker compose up' 'bun run web'",
    "dev:web": "cd apps/web && bun dev",
    "dev:desktop": "cd apps/desktop && bun tauri dev",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "build": "bun --filter=\"./packages/**\" build && bun --filter=\"@content-creation/types\" build",
    "build:web": "cd apps/web && bun run build",
    "build:desktop": "cd apps/desktop && bun tauri build",
    "test": "bun --filter=\"*\" test",
    "type-check": "bun --filter=\"*\" type-check",
    "clean": "rm -rf node_modules packages/*/dist apps/*/dist",
    "db:generate": "cd apps/api && bunx prisma generate",
    "db:migrate": "cd apps/api && bunx prisma migrate dev",
    "db:seed": "docker compose exec api bun prisma/seed.ts",
    "db:studio": "cd apps/api && bunx prisma studio",
    "web": "bun run dev:web",
    "desktop": "bun run dev:desktop"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9",
    "api": "^6.1.3",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.1",
    "prompts": "^2.4.2",
    "uuid": "^11.1.0"
  }
}
