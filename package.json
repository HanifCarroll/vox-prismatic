{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9"
  },
  "scripts": {
    "dev": "bun --filter=\"./apps/**\" dev",
    "build": "bun --filter=\"./packages/**\" build",
    "test": "bun --filter=\"*\" test",
    "type-check": "bun --filter=\"*\" type-check",
    "clean": "rm -rf node_modules packages/*/dist apps/*/dist",
    "cli": "bun apps/cli/src/index.ts"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@notionhq/client": "^4.0.2",
    "@postiz/node": "^1.0.8",
    "dotenv": "^17.2.1",
    "prompts": "^2.4.2"
  }
}
