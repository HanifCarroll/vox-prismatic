{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'DOCKER,WEB' -c 'blue,green' 'docker compose up' 'pnpm run web'",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:desktop": "cd apps/desktop && pnpm tauri dev",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm --filter=\"./packages/**\" build",
    "build:apps": "pnpm --filter=\"./apps/**\" build",
    "build:watch": "pnpm --parallel --filter=\"./packages/**\" dev",
    "build:web": "cd apps/web && pnpm run build",
    "build:desktop": "cd apps/desktop && pnpm tauri build",
    "test": "pnpm --filter=\"*\" test",
    "type-check": "pnpm --filter=\"*\" type-check",
    "clean": "rm -rf node_modules packages/*/dist apps/*/dist",
    "predev": "pnpm run build:packages",
    "db:generate": "cd apps/api && pnpm exec prisma generate",
    "db:migrate": "cd apps/api && pnpm exec prisma migrate dev",
    "db:seed": "docker compose exec api node prisma/seed.ts",
    "db:studio": "cd apps/api && pnpm exec prisma studio",
    "web": "pnpm run dev:web",
    "desktop": "pnpm run dev:desktop",
    "dotnet": "cd apps/api-dotnet && dotnet run",
    "dotnet:watch": "cd apps/api-dotnet && dotnet watch run"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9",
    "api": "^6.1.3",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.1",
    "prompts": "^2.4.2",
    "uuid": "^11.1.0"
  }
}
