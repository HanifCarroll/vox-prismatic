{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm dev:all",
    "dev:desktop": "cd apps/desktop-tauri && pnpm tauri dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:web": "pnpm --filter web dev -- --port 5173",
    "dev:all": "concurrently -n api,web -c blue,magenta \"CORS_ORIGIN=http://localhost:5173 pnpm --filter api dev\" \"pnpm --filter web dev -- --port 5173\"",
    "build:desktop": "cd apps/desktop-tauri && pnpm tauri build",
    "build:api": "cd apps/api && pnpm build",
    "build:web": "pnpm --filter web build",
    "preview:web": "pnpm --filter web serve",
    "test:web": "pnpm --filter web test",
    "lint:web": "pnpm --filter web lint",
    "format:web": "pnpm --filter web format",
    "test:api": "cd apps/api && pnpm test",
    "clean": "rm -rf node_modules apps/*/dist",
    "desktop": "pnpm dev:desktop"
  },
  "devDependencies": {
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.1"
  }
}
