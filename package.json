{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter=\"./apps/**\" dev",
    "build": "bun --filter=\"./packages/**\" build",
    "test": "bun --filter=\"*\" test",
    "type-check": "bun --filter=\"*\" type-check",
    "clean": "rm -rf node_modules packages/*/dist apps/*/dist",
    "web": "cd apps/web && bun dev",
    "desktop": "cd apps/desktop && bun tauri dev",
    "build:web": "cd apps/web && bun run build",
    "build:desktop": "cd apps/desktop && bun tauri build",
    "db:generate": "cd packages/database && npx drizzle-kit generate",
    "db:migrate": "cd packages/database && npx drizzle-kit migrate", 
    "db:push": "cd packages/database && npx drizzle-kit push",
    "db:seed": "cd packages/database && npx tsx scripts/seed.ts",
    "db:reset": "npm run db:push && npm run db:seed"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9",
    "tsx": "^4.19.2",
    "drizzle-kit": "^0.30.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "prompts": "^2.4.2"
  }
}
