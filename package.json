{
  "name": "content-creation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm dev:all",
    "dev:desktop": "cd apps/desktop-tauri && pnpm tauri dev",
    "dev-start": "docker compose -f docker-compose.dev.yml up -d",
    "dev-build": "docker compose -f docker-compose.dev.yml up -d --build",
    "dev-stop": "docker compose -f docker-compose.dev.yml down",
    "dev-restart": "pnpm dev-stop && pnpm dev-start",
    "dev-restart:api": "docker compose -f docker-compose.dev.yml restart api",
    "dev-logs": "docker compose -f docker-compose.dev.yml logs -f",
    "dev-status": "docker compose -f docker-compose.dev.yml ps",
    "build:desktop": "cd apps/desktop-tauri && pnpm tauri build",
    "build:api": "cd apps/api && pnpm build",
    "build:web": "pnpm --filter web build",
    "preview:web": "pnpm --filter web serve",
    "test:web": "pnpm --filter web test",
    "lint:web": "pnpm --filter web lint",
    "format:web": "pnpm --filter web format"
  },
  "devDependencies": {
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.1"
  }
}
