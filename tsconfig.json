{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/ai"
    },
    {
      "path": "./packages/notion"
    },
    {
      "path": "./packages/postiz"
    },
    {
      "path": "./packages/content-pipeline"
    },
    {
      "path": "./packages/workflows"
    },
    {
      "path": "./packages/prompts"
    },
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "apps/web",
    "apps/desktop"
  ]
}